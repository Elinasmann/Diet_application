<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners_sign_in" >

        <TextView
            android:id="@+id/recipe_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/calories_number"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="@string/product_name"
            android:textColor="@color/green"
            android:textSize="@dimen/titles"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calories_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/calories_title"
            android:gravity="right"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="число"
            android:textColor="@color/green_dark"
            android:textSize="@dimen/titles" />

        <TextView
            android:id="@+id/calories_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="right"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="ккал"
            android:textColor="@color/green"
            android:textSize="@dimen/titles"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/proteins_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_title"
            android:layout_alignParentStart="true"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="Б:"
            android:textColor="@color/green_light"
            android:textSize="@dimen/BDU"
            android:textStyle="bold" />

            <TextView
            android:id="@+id/proteins_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_title"
            android:layout_toEndOf="@id/proteins_title"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="число"
            android:textColor="@color/green_dark"
            android:textSize="@dimen/BDU" />


        <TextView
            android:id="@+id/lipids_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_title"
            android:layout_toEndOf="@id/proteins_number"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="г.    Ж:"
            android:textColor="@color/green_light"
            android:textSize="@dimen/BDU"
            android:textStyle="bold" />

            <TextView
            android:id="@+id/lipids_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_title"
            android:layout_toEndOf="@id/lipids_title"
            android:layout_margin="3dp"
            android:padding="4dp"
            android:text="число"
            android:textColor="@color/green_dark"
            android:textSize="@dimen/BDU" />


        <TextView
            android:id="@+id/carbohydrates_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_title"
            android:layout_margin="3dp"
            android:layout_toEndOf="@id/lipids_number"
            android:padding="4dp"
            android:text="г.    У:"
            android:textColor="@color/green_light"
            android:textSize="@dimen/BDU"
            android:textStyle="bold" />

            <TextView
            android:id="@+id/carbohydrates_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_title"
            android:layout_margin="3dp"
            android:layout_toEndOf="@id/carbohydrates_title"
            android:padding="4dp"
            android:text="число"
            android:textColor="@color/green_dark"
            android:textSize="@dimen/BDU" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recipe_title"
            android:layout_margin="3dp"
            android:layout_toEndOf="@id/carbohydrates_number"
            android:padding="4dp"
            android:text="г."
            android:textColor="@color/green_light"
            android:textSize="@dimen/BDU"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
